{
  "dataset": "arcaico_moderno",
  "features": {
    "method": "bag_of_words",
    "params": {
      "ngrams": [
        1,
        3
      ],
      "max_features": 8000
    }
  },
  "model": {
    "name": "naive_bayes",
    "params": {
      "alpha": 1.0,
      "fit_prior": true
    }
  },
  "evaluation": {
    "folds": 5,
    "random_state": 42,
    "accuracy_threshold": 0.55,
    "save_model": true
  },
  "grid_search": {
    "enable": true,
    "scoring": "f1",
    "num_folds": 3,
    "n_jobs": -1,
    "verbose": 1,
    "param_grid": {
      "alpha": [
        0.1,
        0.5,
        1.0,
        2.0,
        5.0
      ],
      "fit_prior": [
        true,
        false
      ]
    }
  }
}